<form method="post" action="/mailer/deliver" class="assan-contact">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12 margin-btm-20">
                    <input type="text" name= "user[name]" class="form-control" placeholder="Full Name...." required="true" />
                </div>
                <div class="col-sm-12 margin-btm-20">
                    <input type="email" name="user[email]" class="form-control" placeholder="Email Address...." required="true" />
                </div>
            </div>
        </div>
            <div class="col-sm-12 margin-btm-20">
                    <input type="tel" name="user[number]" class="form-control" placeholder="Telephone number.." pattern="\d*" title="(countrycode)(mobile)" required="true" />
            </div>
            <div class="col-sm-12 margin-btm-20">
                <textarea name="user[enquiry]" class="form-control" rows="5" placeholder="Enquiries/Booking/Quotation"></textarea>
            </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <div class="data-status animated fadeInDown"></div> <!-- data submit status -->
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <button type="submit" name="submit" class="btn btn-lg btn-block btn-skin margin-btm-20">Submit</button>
        </div>
    </div>

</form>
